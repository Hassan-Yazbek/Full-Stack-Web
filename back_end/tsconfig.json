{
  "compilerOptions": {
    "moduleResolution": "node",
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "types": [
      "node",
      "express"
    ],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true
  },
  "include": [
    "src/types/**/*.d.ts",
    "src/**/*.ts"
  ]
}
